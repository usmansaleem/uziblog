<web-app xmlns="http://caucho.com/ns/resin" xmlns:resin="urn:java:com.caucho.resin">
  <jsf enable-developer-aid="true"/>
  
  <database jndi-name='jdbc/uziblog'>
  	<driver type="org.hsqldb.jdbc.JDBCDriver">
    	<url>jdbc:hsqldb:hsql://localhost/uziblog</url>
    	<user>user</user>
    	<password>password</password>
  	</driver>
  </database>

  <!-- Role Based Authentication-->    
  <resin:Allow url-pattern='/edit.xhtml'>
     <resin:IfUserInRole role="blogadmin"/>
  </resin:Allow>
  
  <!-- Role Based Authentication-->    
  <resin:Allow url-pattern='/new.xhtml'>
     <resin:IfUserInRole role="blogadmin"/>
  </resin:Allow>

  <!-- Authentication provider -->  
  <resin:XmlAuthenticator password-digest="none">  
    	<resin:user name="user" password="password" group="blogadmin"/>
  </resin:XmlAuthenticator>
  
  <!-- The authentication method -->
  <!--
  <resin:FormLogin form-login-page="/login.xhtml"
                      form-error-page="/login.xhtml"/>
  -->
  <resin:digestLogin />
</web-app>
